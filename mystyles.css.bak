.countdown-timer {
    width: 100%;
    height: 500px;
    background-image: url("../img/timer-bg.jpeg");
    background-position: center;
    background-size: cover;
}

.countdown-clock {
    display: flex;
    justify-content: center;
    align-items: center;
    color: #4F205B;
    height: 400px
}

.countdown-clock div {
    flex-basis: 100px; 
    font-style: italic;
    color: #4F205B;

    
}

.countdown-clock div p {
    font-size: 60px;
    margin-bottom: -14px;
    color: #4F205B;
    font-family: 'Times New Roman', Times, serif;
        
}

