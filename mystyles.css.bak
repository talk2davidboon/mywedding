.prewedding-trailer {
    position: relative;
    padding-bottom: 56.25%; /* 16:9 aspect ratio for most YouTube videos */
    height: 0;
    overflow: hidden;
}

.prewedding-trailer iframe {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
}

.VenueButton {
    display: flex;
    justify-content: center;
    justify-items: center;
    align-items: center;
    margin-bottom: 30px;
    height: 10px; /* This will make the container fill the entire viewport height */
}

